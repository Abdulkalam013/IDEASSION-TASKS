PROGRAMS

// 1. To get series of prime numbers

#include <iostream>
using namespace std;


int main() 
{
int num, i, j, count;
cout<<"Enter a Value: ";
cin>>num;
cout<<"Prime Numbers are: ";

for(i=2;i<=num;i++)
{
    count = 0;
    for(j=2;j<i;j++)
    {
        if(i%j==0)
        {
        count++;
        break;
        }
    }
    if(count==0)
    {
        cout<< i<<" ";
    }
}
}




// 2. To print reverse of a number

Method-1

#include <iostream>
using namespace std;


int main()
{
    int num;
    cout<<"Enter the Number to be Reversed: ";
    cin>>num;
    
    cout<<"Reversed Number: ";
    
    string str = to_string(num);
    for(int i = str.length()-1; i>=0; i--)
    {
        cout<<str[i];
    }
 
}

    return 0;
}

Method-2

#include<iostream>
using namespace std;
int main()
{
    int number, reminder, reverse;
    cout<<"Enter the Number: ";
    cin>>number;
    for(reverse=0; number!=0; number=number/10)
    {
        reminder = number%10;
        reverse = reminder + (reverse*10);
    }
    cout<<"\nReversed Number: "<<reverse;
    cout<<endl;
    return 0;
}
